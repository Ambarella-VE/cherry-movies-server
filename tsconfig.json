{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "watch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths":{
      "*":[
        "./dist",
        "./.yarn/*",
        "./src/*"
      ]
    }
  },
  "lib": ["ES6"]
}
